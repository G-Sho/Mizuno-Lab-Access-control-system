rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // セキュリティルール：認証済みユーザーのみアクセス可能

    // ユーザーコレクション
    match /users/{userId} {
      // 認証済みユーザーは全ユーザー情報を読み取り可能（現在の状況確認用）
      allow read: if request.auth != null;

      // 各ユーザーは自分のドキュメントのみ書き込み可能
      allow write: if request.auth != null && request.auth.uid == userId;

      // Slackユーザー用: Anonymous/Custom Token認証の場合
      // Slack UIDのドキュメントへの書き込みを許可（一時的措置）
      // TODO: Custom TokenにSlack UIDを含めて、より厳格なルールに変更する
      allow write: if request.auth != null && userId.matches('slack_.*');
    }

    // ログコレクション
    match /logs/{logId} {
      // 認証済みユーザーのみログ作成可能
      allow create: if request.auth != null;

      // 認証済みユーザーは全ログ読み取り可能（履歴確認用）
      allow read: if request.auth != null;

      // ログの更新・削除は禁止（データ整合性のため）
      allow update, delete: if false;
    }

    // 管理者設定コレクション（将来の拡張用）
    match /admin/{document=**} {
      // 管理者のみアクセス可能
      allow read, write: if request.auth != null &&
        request.auth.token.admin == true;
    }
  }
}