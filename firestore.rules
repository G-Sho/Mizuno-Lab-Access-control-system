rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 開発用：Slack認証システム動作確認のため一時的に寛容なルール
    // TODO: 本番環境では適切なセキュリティルールに変更する

    // ユーザーコレクション
    match /users/{userId} {
      // 全てのアクセスを許可（開発用）
      allow read, write: if true;
    }

    // ログコレクション
    match /logs/{logId} {
      // 全てのアクセスを許可（開発用）
      allow read, create: if true;
      // ログの更新・削除は禁止
      allow update, delete: if false;
    }
  }
}